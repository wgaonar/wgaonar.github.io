<span class="c1">// Global KEYPAD_5BUTTONS object instantiation</span>
<span class="n">KEYPAD_5BUTTONS</span> <span class="nf">myKeyPad</span><span class="p">(</span><span class="n">P9_38</span><span class="p">,</span> <span class="n">P9_11</span><span class="p">,</span> <span class="n">P9_12</span><span class="p">,</span> <span class="n">P9_13</span><span class="p">,</span> <span class="n">P9_18</span><span class="p">);</span>

